<?xml version='1.0' encoding='windows-1252'?>
<jsp:root xmlns:jsp="http://java.sun.com/JSP/Page" version="2.1"
          xmlns:f="http://java.sun.com/jsf/core"
          xmlns:h="http://java.sun.com/jsf/html">
  <jsp:output omit-xml-declaration="true" doctype-root-element="HTML"
              doctype-system="http://www.w3.org/TR/html4/loose.dtd"
              doctype-public="-//W3C//DTD HTML 4.01 Transitional//EN"/>
  <jsp:directive.page contentType="text/html;charset=windows-1252"/>
  <f:view>
    <html>
      <head>
        <meta http-equiv="Content-Type"
              content="text/html; charset=windows-1252"/>
        <title>OwnerDashboard</title>
        <link rel="stylesheet" type="text/css" href="images/styles3.css"/>
       <style type="text/css">
            body {
                background: url('../images/ownImg.jpg') no-repeat center center fixed;
                background-size: cover;
            }
        </style>
      </head>
     <body>
        <!-- Header panel -->
        <div class="header">
          <div class="header-left">
            <h:form style="margin:0; padding:0; display:inline;">
              <h:commandButton value="Profile" styleClass="profile-btn"
                               action="#{backing_OwnerDashboard.profile_action}"/>
            </h:form>
          </div>
          <div class="header-title">VEHICLE OWNER DASHBOARD</div>
          <div class="header-right">
            <h:form style="margin:0; padding:0;">
              <h:commandButton value="Logout" styleClass="logout-btn"
                               action="#{backing_OwnerDashboard.logout_action}"/>
            </h:form>
          </div>
        </div>
        <!-- Side panel -->
        <div class="main-layout">
          <div class="sidebar">
            <div class="sidebar-title">Profile</div>
            <div class="form-row">
              <h:outputLabel value="Name" for="name"
                             styleClass="sidebar-label"/>
               
              <h:inputText value="#{backing_OwnerDashboard.loggedInOwner.ownerName}" id="name"
                           readonly="true" styleClass="sidebar-input"/>
            </div>
            <h:form id="sidebarNavForm">
              <div class="sidebar-nav">
                <h:commandLink value="Home"
                               action="#{backing_OwnerDashboard.home_action}"
                               styleClass="sidebar-nav-link"/>
                 
                <h:commandLink value="View Vehicle"
                               action="#{backing_OwnerDashboard.viewVehicle_action}"
                               styleClass="sidebar-nav-link"/>
                 
                <h:commandLink value="Pay Offence"
                               action="#{backing_OwnerDashboard.payOffence_action}"
                               styleClass="sidebar-nav-link"/>
                
              </div>
            </h:form>
          </div>
          
          <!-- Centered welcome content -->          
          <div class="center-content">
            <h:form id="ownerProfileForm">
              <div class="profile-card">
                <h2 class="profile-card-header">Owner Profile</h2>
                <h:panelGrid columns="2" styleClass="profile-card-grid" cellpadding="8" columnClasses="profile-label,profile-value">

                  <h:outputLabel value="Aadhar:" for="aadhar" styleClass="profile-label"/>
                  <h:inputText id="aadhar"
                               value="#{backing_Profile.loggedInOwner.ownerAadhar}"
                               readonly="true"
                               styleClass="profile-input profile-input-readonly"/>

                  <h:outputLabel value="Name:" for="nameField" styleClass="profile-label"/>
                  <h:inputText id="nameField"
                               value="#{backing_Profile.loggedInOwner.ownerName}"
                               readonly="#{not backing_Profile.editMode}"
                               styleClass="profile-input"/>

                  <h:outputLabel value="PAN Card:" for="pan" styleClass="profile-label"/>
                  <h:inputText id="pan"
                               value="#{backing_Profile.loggedInOwner.panCard}"
                               readonly="true"
                               styleClass="profile-input profile-input-readonly"/>

                  <h:outputLabel value="Phone:" for="phone" styleClass="profile-label"/>
                  <h:inputText id="phone"
                               value="#{backing_Profile.loggedInOwner.phone}"
                               readonly="#{not backing_Profile.editMode}"
                               styleClass="profile-input"/>

                  <h:outputLabel value="Address:" for="address" styleClass="profile-label"/>
                  <h:inputTextarea id="address"
                                   value="#{backing_Profile.loggedInOwner.address}"
                                   readonly="#{not backing_Profile.editMode}"
                                   styleClass="profile-input"
                                   rows="2"/>

                  <h:outputLabel value="Gender:" for="gender" styleClass="profile-label"/>
                  <h:panelGroup>
                    <h:selectOneRadio id="gender"
                                      value="#{backing_Profile.loggedInOwner.gender}"
                                      layout="lineDirection"
                                      disabled="#{not backing_Profile.editMode}"
                                      styleClass="profile-radio">
                      <f:selectItem itemValue="M" itemLabel="Male"/>
                      <f:selectItem itemValue="F" itemLabel="Female"/>
                      <f:selectItem itemValue="O" itemLabel="Other"/>
                    </h:selectOneRadio>
                  </h:panelGroup>
                </h:panelGrid>

                <!-- Action Buttons -->
                <div class="profile-card-action-row">
                  <!-- Readonly mode: Show Update and Back -->
                  <h:panelGroup rendered="#{not backing_Profile.editMode}">
                    <h:commandButton value="Update"
                                     action="#{backing_Profile.enableEditProfile}"
                                     styleClass="button-pink"/>
                    <h:commandButton value="Back"
                                     action="#{backing_Profile.hideProfileCard}"
                                     styleClass="button-danger"/>
                  </h:panelGroup>
                  <!-- Edit mode: Show Save and Cancel -->
                  <h:panelGroup rendered="#{backing_Profile.editMode}">
                    <h:commandButton value="Save"
                                     action="#{backing_Profile.saveProfile}"
                                     styleClass="button-success"/>
                    <h:commandButton value="Cancel"
                                     action="#{backing_Profile.cancelEditProfile}"
                                     styleClass="button-danger"/>
                  </h:panelGroup>
                </div>
                <h:messages globalOnly="true" styleClass="profile-messages"/>
              </div>
            </h:form>
          </div>
        </div>
      </body>
    </html>
  </f:view>
  <!--oracle-jdev-comment:auto-binding-backing-bean-name:backing_Profile-->
</jsp:root>
