<?xml version='1.0' encoding='windows-1252'?>
<jsp:root xmlns:jsp="http://java.sun.com/JSP/Page" version="2.1"
          xmlns:f="http://java.sun.com/jsf/core"
          xmlns:h="http://java.sun.com/jsf/html">
    <jsp:output omit-xml-declaration="true" doctype-root-element="HTML"
                doctype-system="http://www.w3.org/TR/html4/loose.dtd"
                doctype-public="-//W3C//DTD HTML 4.01 Transitional//EN"/>
    <jsp:directive.page contentType="text/html;charset=windows-1252"/>
    <f:view>
        <html>
            <head>
                <meta http-equiv="Content-Type"
                      content="text/html; charset=windows-1252"/>
                <title>OwnerVehicles</title>
                <link rel="stylesheet" type="text/css"
                      href="images/styles3.css"/>
            </head>
            <body>
                <!-- Header panel -->
                <div class="header">
                    <div class="header-left">
                        <h:form style="margin:0; padding:0; display:inline;">
                            <h:commandButton value="Profile"
                                             styleClass="profile-btn"
                                             action="#{backing_OwnerDashboard.profile_action}"/>
                        </h:form>
                    </div>
                    <div class="header-title">VEHICLE OWNER DASHBOARD</div>
                    <div class="header-right">
                        <h:form style="margin:0; padding:0;">
                            <h:commandButton value="Logout"
                                             styleClass="logout-btn"
                                             action="#{backing_OwnerDashboard.logout_action}"/>
                        </h:form>
                    </div>
                </div>
                <!-- Side panel -->
                <div class="main-layout">
                    <div class="sidebar">
                        <div class="sidebar-title">Vehicle Details Panel</div>
                        <div class="form-row">
                            <h:outputLabel value="Name" for="name"
                                           styleClass="sidebar-label"/>
                             
                            <h:inputText value="#{backing_OwnerDashboard.loggedInOwner.ownerName}"
                                         id="name" readonly="true"
                                         styleClass="sidebar-input"/>
                        </div>
                        <h:form id="sidebarNavForm">
                            <div class="sidebar-nav">
                                <h:commandLink value="Home"
                                               action="#{backing_OwnerDashboard.home_action}"
                                               styleClass="sidebar-nav-link"/>
                                 
                                <h:commandLink value="View Vehicle"
                                               action="#{backing_OwnerDashboard.viewVehicle_action}"
                                               styleClass="sidebar-nav-link"/>
                                 
                                <h:commandLink value="Pay Offence"
                                               action="#{backing_OwnerDashboard.payOffence_action}"
                                               styleClass="sidebar-nav-link"/>
                            </div>
                        </h:form>
                    </div>
                    <!-- Centered content -->
                    <div class="center-content">
                        <h:form id="form1" styleClass="admin-card"
                                style="max-width: 900px; width: 100%;">
                            <!-- Optional message -->
                            <h:outputText value="#{backing_OwnerVehicles.message}"
                                          rendered="#{not empty backing_OwnerVehicles.message}"
                                          styleClass="admin-card-row admin-message"/>
                            <h2 class="admin-card-heading">Vehicles Owned</h2>
                            <!-- Registration Select -->
                            <h:panelGroup layout="block"
                                          style="display: flex; align-items: center; gap: 12px; margin-bottom: 16px;">
                                <!-- Registration Select Combo Box -->
                                <h:selectOneMenu id="registrationSelect"
                                                 value="#{backing_OwnerVehicles.selectedRegistrationId}"
                                                 styleClass="admin-card-combo"
                                                 required="true"
                                                 requiredMessage="Please select a vehicle registration."
                                                 style="flex-grow: 1; min-width: 200px;">
                                    <f:selectItem itemLabel="-- Select --"
                                                  itemValue=""/>
                                    <f:selectItems value="#{backing_OwnerVehicles.registrationSelectItems}"/>
                                </h:selectOneMenu>
                                <!-- Load Details Button -->
                                <h:commandButton value="Load Details"
                                                 action="#{backing_OwnerVehicles.loadVehicleDetails}"
                                                 styleClass="admin-card-actions-btn admin-card-actions-save"
                                                 style="white-space: nowrap;"/>
                            </h:panelGroup>
                            <!-- Combined Registration & Vehicle Details -->
                            <h3 class="admin-card-heading"
                                style="margin-top: 32px;">Registration Details</h3>
                            <h:panelGrid columns="2" styleClass="admin-card-row"
                                         cellpadding="8"
                                         columnClasses="label-col,value-col">
                                <h:outputLabel value="Registration ID:"
                                               styleClass="ui-outputlabel label-output-pair"/>
                                <h:outputText value="#{backing_OwnerVehicles.selectedRegistration.registrationId}"
                                              styleClass="output-box"/>
                                <h:outputLabel value="Registrar:"
                                               styleClass="ui-outputlabel label-output-pair"/>
                                <h:outputText value="#{backing_OwnerVehicles.selectedRegistration.registrar}"
                                              styleClass="output-box"/>
                                <h:outputLabel value="Location:"
                                               styleClass="ui-outputlabel label-output-pair"/>
                                <h:outputText value="#{backing_OwnerVehicles.selectedRegistration.location}"
                                              styleClass="output-box"/>
                                <h:outputLabel value="Registration Date:"
                                               styleClass="ui-outputlabel label-output-pair"/>
                                <h:outputText value="#{backing_OwnerVehicles.selectedRegistration.registrationDate}"
                                              styleClass="output-box">
                                    <f:convertDateTime pattern="dd-MM-yyyy"/>
                                </h:outputText>
                            </h:panelGrid>
                            <h3 class="admin-card-heading"
                                style="margin-top: 32px;">Vehicle Details</h3>
                            <h:panelGrid columns="2" styleClass="admin-card-row"
                                         cellpadding="8"
                                         columnClasses="label-col,value-col">
                                <h:outputLabel value="Vehicle Brand:"
                                               styleClass="ui-outputlabel label-output-pair"/>
                                <h:outputText value="#{backing_OwnerVehicles.selectedVehicle.vehicleBrand}"
                                              styleClass="output-box"/>
                                <h:outputLabel value="Vehicle Model:"
                                               styleClass="ui-outputlabel label-output-pair"/>
                                <h:outputText value="#{backing_OwnerVehicles.selectedVehicle.vehicleModel}"
                                              styleClass="output-box"/>
                                <h:outputLabel value="Vehicle Type:"
                                               styleClass="ui-outputlabel label-output-pair"/>
                                <h:outputText value="#{backing_OwnerVehicles.selectedVehicle.vehicleType}"
                                              styleClass="output-box"/>
                                <h:outputLabel value="Color:"
                                               styleClass="ui-outputlabel label-output-pair"/>
                                <h:outputText value="#{backing_OwnerVehicles.selectedVehicle.color}"
                                              styleClass="output-box"/>
                                <h:outputLabel value="Fuel Type:"
                                               styleClass="ui-outputlabel label-output-pair"/>
                                <h:outputText value="#{backing_OwnerVehicles.selectedVehicle.fuelType}"
                                              styleClass="output-box"/>
                                <h:outputLabel value="Manufacture Date:"
                                               styleClass="ui-outputlabel label-output-pair"/>
                                <h:outputText value="#{backing_OwnerVehicles.selectedVehicle.manufactureDate}"
                                              styleClass="output-box">
                                    <f:convertDateTime pattern="dd-MM-yyyy"/>
                                </h:outputText>
                                <h:outputLabel value="Number of Exhaust:"
                                               styleClass="ui-outputlabel label-output-pair"/>
                                <h:outputText value="#{backing_OwnerVehicles.selectedVehicle.noOfExhaust}"
                                              styleClass="output-box"/>
                            </h:panelGrid>
                        </h:form>
                    </div>
                </div>
            </body>
        </html>
    </f:view>
    <!--oracle-jdev-comment:auto-binding-backing-bean-name:backing_OwnerVehicles-->
</jsp:root>
