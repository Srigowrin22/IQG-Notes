package training.iqgateway;

import org.springframework.beans.factory.annotation.Autowired;
import org.springframework.web.bind.annotation.GetMapping;
import org.springframework.web.bind.annotation.PathVariable;
import org.springframework.web.bind.annotation.RequestMapping;
import org.springframework.web.bind.annotation.RestController;

@RestController
@RequestMapping("/api/departments")
public class DepartmentController {
	
	@Autowired
	private DepartmentService deptServiceRef;
	
	@GetMapping
	public List<DepartmentEO> fetchAllDeparments(){
		return deptServiceRef.getAllDepartments();
	}
	
	@GetMapping("/{id}")
	public DepartmentEO fetchDepartmentById(@PathVariable Integer id){
		return deptServiceRef.getDepartmentById(id);
	}
	
	
}
