package training.iqgateway;

import java.util.List;

import org.springframework.beans.factory.annotation.Autowired;
import org.springframework.boot.CommandLineRunner;
import org.springframework.boot.SpringApplication;
import org.springframework.boot.autoconfigure.SpringBootApplication;
import org.springframework.jdbc.core.BeanPropertyRowMapper;
import org.springframework.jdbc.core.JdbcTemplate;

@SpringBootApplication
public class SpringbootJDBC implements CommandLineRunner{
	
	@Autowired
	private JdbcTemplate jdbcTemplate;
	public static void main(String[] args) {
		SpringApplication.run(SpringbootJDBC.class, args);
	}

	public void run(String... args) throws Exception {
		String SQLQuery = "SELECT * FROM DEPARTMENTS";
		
		List<DepartmentEO> departmentList = jdbcTemplate.query(SQLQuery, BeanPropertyRowMapper.newInstance(DepartmentEO.class);)
		
				departmentList.forEach(System.out::println);
	}
}
