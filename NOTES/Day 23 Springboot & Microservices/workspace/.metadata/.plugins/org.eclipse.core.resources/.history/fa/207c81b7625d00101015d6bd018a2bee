	public Boolean removeRoleEO(RoleEO roleEO) {
		rolesRepositoryRef.delete(roleEO);
		return true;
	}

	public List<RoleEO> getRoleEOFindAll() {
		List<RoleEO> roleEOList = new ArrayList<RoleEO>();
		rolesRepositoryRef.findAll().forEach(roleEOList::add);
		return roleEOList;
	}

