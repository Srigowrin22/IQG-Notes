package training.iqgateway;

import java.util.List;

import org.springframework.beans.factory.annotation.Autowired;
import org.springframework.web.bind.annotation.DeleteMapping;
import org.springframework.web.bind.annotation.GetMapping;
import org.springframework.web.bind.annotation.PathVariable;
import org.springframework.web.bind.annotation.PostMapping;
import org.springframework.web.bind.annotation.RequestMapping;
import org.springframework.web.bind.annotation.RequestParam;
import org.springframework.web.bind.annotation.RestController;

@RestController
@RequestMapping("/api/departments")
public class DepartmentController {
	
	@Autowired
	private DepartmentService deptServiceRef;
	
	@GetMapping
	public List<DepartmentEO> fetchAllDeparments(){
		return deptServiceRef.getAllDepartments();
	}
	
	@GetMapping("/{id}")
	public DepartmentEO fetchDepartmentById(@PathVariable Integer id){
		return deptServiceRef.getDepartmentById(id);
	}
	
	@PostMapping
	public DepartmentEO addNewDepartment(@RequestBody DepartmentEO departmentEORef){
		return deptServiceRef.addDepartment(departmentEORef);
	}
	
	@DeleteMapping
	public void deleteDepartment(@RequestParam("Id")Integer givenId){
		deptServiceRef.deleteDepartmentById(givenId);
	}
}
