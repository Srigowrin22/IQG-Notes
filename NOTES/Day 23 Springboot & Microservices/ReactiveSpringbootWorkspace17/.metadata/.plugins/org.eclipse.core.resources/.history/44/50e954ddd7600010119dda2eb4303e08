package training.iqgateway.controller;

import java.util.List;

import org.springframework.beans.factory.annotation.Autowired;
import org.springframework.http.HttpStatus;
import org.springframework.http.ResponseEntity;
import org.springframework.web.bind.annotation.DeleteMapping;
import org.springframework.web.bind.annotation.GetMapping;
import org.springframework.web.bind.annotation.PathVariable;
import org.springframework.web.bind.annotation.PostMapping;
import org.springframework.web.bind.annotation.PutMapping;
import org.springframework.web.bind.annotation.RequestBody;
import org.springframework.web.bind.annotation.RequestMapping;
import org.springframework.web.bind.annotation.RestController;

import training.iqgateway.dto.AdminDTO;
import training.iqgateway.entities.AdminEO;
import training.iqgateway.service.AdminService;

@RestController
@RequestMapping("/admin")
//@CrossOrigin(origins = "url")
public class AdminController {

	@Autowired
	private AdminService adminServiceRef;

	@GetMapping("/showAdmins")
	public ResponseEntity<List<AdminDTO>> fetchAllAdmin() {
		List<AdminDTO> admins = adminServiceRef.getAdminEOFindAll();
		return ResponseEntity.ok(admins);
	}

	@PostMapping("/addAdmin")
	public ResponseEntity<AdminEO> addAdmin(@RequestBody AdminEO adminEO) {
		try {
			AdminEO savedAdmin = adminServiceRef.persistAdminEO(adminEO);
			return ResponseEntity.status(HttpStatus.CREATED).body(savedAdmin);
		} catch (Exception e) {
			return ResponseEntity.status(HttpStatus.BAD_REQUEST).build();
		}
	}

	@PutMapping("/updateAdmin")
	public ResponseEntity<String> updateAdmin(@RequestBody AdminEO adminEO) {
		try {
			String msg = adminServiceRef.mergeAdminEO(adminEO);
			return ResponseEntity.ok(msg);
		} catch (Exception e) {
			return ResponseEntity.status(HttpStatus.BAD_REQUEST).body("Failed to update admin: " + e.getMessage());
		}
	}

	@DeleteMapping("/deleteAdmin")
	public ResponseEntity<Boolean> deleteAdmin(@RequestBody AdminEO adminEO) {
		try {
			Boolean deleted = adminServiceRef.removeAdminEO(adminEO);
			return ResponseEntity.ok(deleted);
		} catch (Exception e) {
			return ResponseEntity.status(HttpStatus.BAD_REQUEST).body(false);
		}
	}

	@PutMapping("/authorizeAdmin")
	public ResponseEntity<Integer> authorizeAdmin(@PathVariable String designationId, String password,
			String newPassword) {
		try {
			int result = adminServiceRef.authorizeAdmin(designationId, password, newPassword);
			return ResponseEntity.ok(result);
		} catch (Exception e) {
			return ResponseEntity.status(HttpStatus.BAD_REQUEST).body(-1);
		}
	}

	@GetMapping("/showAdminByDesig/{desig}")
	public ResponseEntity<AdminDTO> findAdminByDesigID(@PathVariable String desig) {
		AdminDTO admin = adminServiceRef.findAdminByDesigID(desig);
		if (admin != null) {
			return ResponseEntity.ok(admin);
		}
		return ResponseEntity.notFound().build();
	}

	@GetMapping("/showAdminByAadhar/{aadhar}")
	public ResponseEntity<AdminDTO> findAdminByAadhar(@PathVariable String aadhar) {
		AdminDTO admin = adminServiceRef.findAdminByAadhar(aadhar);
		if (admin != null) {
			return ResponseEntity.ok(admin);
		}
		return ResponseEntity.notFound().build();
	}

	@GetMapping("/showAdminByRoleId/{roleId}")
	public ResponseEntity<List<AdminDTO>> fetchAdminByRoleID(@PathVariable Long roleId) {
		List<AdminDTO> admins = adminServiceRef.findAdminByRoleID(roleId);
		return ResponseEntity.ok(admins);
	}

	@GetMapping("/showAdminByName/{name}")
	public ResponseEntity<AdminEO> fetchAdminByName(@PathVariable String name) {
		AdminEO admin = adminServiceRef.findAdminByDesigID(name);
		if (admin != null) {
			return ResponseEntity.ok(admin);
		}
		return ResponseEntity.notFound().build();
	}

}