package training.iqgateway.moviecatalogservice;

import java.util.Collections;
import java.util.List;

import org.springframework.web.bind.annotation.GetMapping;
import org.springframework.web.bind.annotation.PathVariable;
import org.springframework.web.bind.annotation.RequestMapping;
import org.springframework.web.bind.annotation.RestController;

import training.iqgateway.moviecatalogservice.model.CatalogItems;

@RestController
@RequestMapping("/catalog")
public class MovieCatalogResource {
 
	@GetMapping("/{userId}")
	public List<CatalogItems> getCatalog(@PathVariable String userId) {
 
		return Collections.singletonList(new CatalogItem("Chennai Express", "Superbbb", 5));
	}
}