	@Autowired
	private AdminService adminServiceRef;

	@GetMapping("/showAdmins")
	public ResponseEntity<List<AdminDTO>> fetchAllAdmin() {
		List<AdminDTO> admins = adminServiceRef.getAdminEOFindAll();
		return ResponseEntity.ok(admins);
	}

	@PostMapping("/addAdmin")
	public ResponseEntity<AdminEO> addAdmin(@RequestBody AdminEO adminEO) {
		try {
			AdminEO savedAdmin = adminServiceRef.persistAdminEO(adminEO);
			return ResponseEntity.status(HttpStatus.CREATED).body(savedAdmin);
		} catch (Exception e) {
			return ResponseEntity.status(HttpStatus.BAD_REQUEST).build();
		}
	}

	@PutMapping("/updateAdmin")
	public ResponseEntity<String> updateAdmin(@RequestBody AdminEO adminEO) {
		try {
			String msg = adminServiceRef.mergeAdminEO(adminEO);
			return ResponseEntity.ok(msg);
		} catch (Exception e) {
			return ResponseEntity.status(HttpStatus.BAD_REQUEST).body("Failed to update admin: " + e.getMessage());
		}
	}

	@DeleteMapping("/deleteAdmin")
	public ResponseEntity<Boolean> deleteAdmin(@RequestBody AdminEO adminEO) {
		try {
			Boolean deleted = adminServiceRef.removeAdminEO(adminEO);
			return ResponseEntity.ok(deleted);
		} catch (Exception e) {
			return ResponseEntity.status(HttpStatus.BAD_REQUEST).body(false);
		}
	}

	@PutMapping("/authorizeAdmin")
	public ResponseEntity<Integer> authorizeAdmin(@PathVariable String designationId, String password,
			String newPassword) {
		try {
			int result = adminServiceRef.authorizeAdmin(designationId, password, newPassword);
			return ResponseEntity.ok(result);
		} catch (Exception e) {
			return ResponseEntity.status(HttpStatus.BAD_REQUEST).body(-1);
		}
	}

	@GetMapping("/showAdminByDesig/{desig}")
	public ResponseEntity<AdminEO> findAdminByDesigID(@PathVariable String desig) {
		AdminEO admin = adminServiceRef.findAdminByDesigID(desig);
		if (admin != null) {
			return ResponseEntity.ok(admin);
		}
		return ResponseEntity.notFound().build();
	}

	@GetMapping("/showAdminByAadhar/{aadhar}")
	public ResponseEntity<AdminEO> findAdminByAadhar(@PathVariable String aadhar) {
		AdminEO admin = adminServiceRef.findAdminByAadhar(aadhar);
		if (admin != null) {
			return ResponseEntity.ok(admin);
		}
		return ResponseEntity.notFound().build();
	}

	@GetMapping("/showAdminByRoleId/{roleId}")
	public ResponseEntity<List<AdminEO>> fetchAdminByRoleID(@PathVariable Long roleId) {
		List<AdminEO> admins = adminServiceRef.findAdminByRoleID(roleId);
		return ResponseEntity.ok(admins);
	}

	@GetMapping("/showAdminByName/{name}")
	public ResponseEntity<AdminEO> fetchAdminByName(@PathVariable String name) {
		AdminEO admin = adminServiceRef.findAdminByDesigID(name);
		if (admin != null) {
			return ResponseEntity.ok(admin);
		}
		return ResponseEntity.notFound().build();
	}


	@GetMapping("/findByAdminByRoleID/{roleId}")
	public ResponseEntity<List<AdminEO>> findAdminByRoleID(@PathVariable Long roleId) {
		List<AdminEO> admins = adminServiceRef.findAdminByRoleID(roleId);
		return ResponseEntity.ok(admins);
	}

	@GetMapping("/showRoles")
	public ResponseEntity<List<RolesDTO>> fetchAllRoles() {
		List<RolesDTO> roles = adminServiceRef.getRoleEOFindAll();
		return ResponseEntity.ok(roles);
	}

	@PostMapping("/addRole")
	public ResponseEntity<String> addRole(@RequestBody RoleEO roleEO) {
		try {
			String res = adminServiceRef.persistRoleEO(roleEO);
			return ResponseEntity.status(HttpStatus.CREATED).body(res);
		} catch (Exception e) {
			return ResponseEntity.status(HttpStatus.BAD_REQUEST).body("Failed to add role: " + e.getMessage());
		}
	}

	@PutMapping("/updateRole")
	public ResponseEntity<String> updateRole(@RequestBody RoleEO roleEO) {
		try {
			String res = adminServiceRef.mergeRoleEO(roleEO);
			return ResponseEntity.ok(res);
		} catch (Exception e) {
			return ResponseEntity.status(HttpStatus.BAD_REQUEST).body("Failed to update role: " + e.getMessage());
		}
	}

	@DeleteMapping("/deleteRole")
	public ResponseEntity<Boolean> deleteRole(@RequestBody RoleEO roleEO) {
		try {
			Boolean deleted = adminServiceRef.removeRoleEO(roleEO);
			return ResponseEntity.ok(deleted);
		} catch (Exception e) {
			return ResponseEntity.status(HttpStatus.BAD_REQUEST).body(false);
		}
	}

	@GetMapping("/findByRoleID/{roleId}")
	public ResponseEntity<RoleEO> findByRoleID(@PathVariable Long roleId) {
		RoleEO role = adminServiceRef.findRoleByRoleID(roleId);
		if (role != null) {
			return ResponseEntity.ok(role);
		}
		return ResponseEntity.notFound().build();
	}

	@GetMapping("/findByRoleName/{roleName}")
	public ResponseEntity<RoleEO> findByRoleName(@PathVariable String roleName) {
		RoleEO role = adminServiceRef.findRoleByRoleName(roleName);
		if (role != null) {
			return ResponseEntity.ok(role);
		}
		return ResponseEntity.notFound().build();
	}
}