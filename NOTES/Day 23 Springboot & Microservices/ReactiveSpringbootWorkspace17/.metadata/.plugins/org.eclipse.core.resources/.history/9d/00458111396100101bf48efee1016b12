package training.iqgateway.repository;

import java.util.List;

import org.springframework.data.jdbc.repository.query.Query;
import org.springframework.data.jpa.repository.JpaRepository;
import org.springframework.stereotype.Repository;

import training.iqgateway.entities.OffenceTypesEO;

@Repository
public interface OffenceTypesRepository extends JpaRepository<OffenceTypesEO, Long> {

	@Query("SELECT COALESCE(MAX(o.offenceId), 0) FROM OffenceTypesEO o")
	Long findMaxId();

	List<OffenceTypesEO> findByVehicleType(String vehicleType);

	List<OffenceTypesEO> findByOffenceType(String offenceType);
}
